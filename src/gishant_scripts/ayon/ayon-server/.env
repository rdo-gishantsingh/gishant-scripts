# ========================================
# PostgreSQL Configuration (AYON uses Postgres 15)
# ========================================
AYON_STACK_POSTGRES_TAG=15
POSTGRES_USER=ayon
POSTGRES_PASSWORD=ayon
POSTGRES_DB=ayon

# ========================================
# PgAdmin Configuration
# ========================================
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=9080

# ========================================
# AYON Server Configuration
# ========================================
AYON_STACK_SERVER_PORT=5000
AYON_SERVER_WORKERS=1
AYON_SERVER_TIMEOUT=120
AYON_SERVER_LOG_LEVEL=warning
AYON_SERVER_TYPE=gunicorn

# Database connection pool configuration
AYON_POSTGRES_POOL_SIZE=64
AYON_POSTGRES_POOL_TIMEOUT=20

# Direct PostgreSQL connection (asyncpg doesn't work with PgBouncer)
AYON_POSTGRES_URL=postgres://ayon:ayon@db:5432/ayon

# ========================================
# AYON Worker Configuration
# ========================================
AYON_API_KEY=veryinsecurapikey
AYON_SERVER_URL=http://server:5000

# ========================================
# Dozzle (Log Viewer) Configuration
# ========================================
DOZZLE_PORT=9999
DOZZLE_LEVEL=info
DOZZLE_TAILSIZE=300
# DOZZLE_FILTER - Leave unset to monitor ALL containers on the host
# DOZZLE_FILTER=name=ayon-docker
