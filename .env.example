# Gishant Scripts Configuration
# Copy this file to .env and fill in your values

# YouTrack Configuration
# Get your token from: https://your-instance.youtrack.cloud/users/me?tab=authentication
YOUTRACK_URL=https://your-instance.youtrack.cloud
YOUTRACK_API_TOKEN=perm-your-permanent-token-here

# GitHub Configuration (optional if using gh CLI)
# Create token at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_github_personal_access_token

# Google AI Configuration
# Get API key from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key

# AYON Configuration (optional - uses ayon_api defaults if not set)
AYON_SERVER_URL=https://your-ayon-server.com
AYON_API_KEY=your-ayon-api-key
AYON_SERVER_URL_LOCAL=https://your-ayon-server.com
AYON_API_KEY_LOCAL=your-ayon-api-key-local

# Kitsu Configuration
KITSU_API_URL_LOCAL=https://your-kitsu-server.com
KITSU_API_KEY_LOCAL=your-kitsu-api-key-local

# Maya Configuration
MAYA_APP_DIR=/path/to/maya/app/dir

# Unreal Configuration
UNREAL_PROJECT_DIR=/path/to/unreal/project
UNREAL_SKELETAL_MESH_PATH=/Game/Path/To/SkeletalMesh

# Output Configuration
OUTPUT_DIR=./output
LOG_LEVEL=INFO
